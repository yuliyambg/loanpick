<!DOCTYPE html>
<html>
  <head>
    <title>Loanpick</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  </head>
  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="<%= root_url %>">LoanPick</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="navbar-brand" href="<%= root_url %>">Home</a>
        <%# if !current_borrower %>
        <!--          <a class="navbar-brand" href="<%#= new_borrower_path %>"/>Sign Up</a>-->
        <%#= link_to "Log in", signin_path, class:"navbar-brand" %>
        <%# end %>
        <%# if current_borrower %>
        <%#= link_to "#{current_borrower.first_name}'s profile", borrower_path(current_borrower), class:"navbar-brand"%>
        <%#= link_to "#{current_borrower.first_name}'s loans", borrower_loans_path(current_borrower), class:"navbar-brand"%>
        <%#= link_to "Log Out", session_path, class:"navbar-brand",method:'delete' %>
        <%# end %>

        <% if is_borrower_logged_in? %>

          <%= link_to "#{current_borrower.first_name}'s profile", borrower_path(current_borrower), class:"navbar-brand"%>
          <%= link_to "#{current_borrower.first_name}'s loans", borrower_loans_path(current_borrower), class:"navbar-brand"%>
          <%= link_to "Log Out", session_path, class:"navbar-brand",method:'delete' %>

        <% elsif is_lender_logged_in? %>

          <%= link_to "#{current_lender.name}'s profile", lender_path(current_lender), class:"navbar-brand"%>
          <%= link_to "#{current_lender.name}'s loans", lender_lender_loans_path(current_lender), class:"navbar-brand"%>
          <%= link_to "Log Out", session_path, class:"navbar-brand",method:'delete' %>

        <%else %>

          <a class="navbar-brand" href="<%= new_borrower_path %>"/>Borrower SignUp</a>
          <a class="navbar-brand" href="<%= new_lender_path %>"/>Lender SignUp</a>
          <%= link_to "Borrower LogIn", signin_path, class:"navbar-brand" %>
          <%= link_to "Lender LogIn", lender_signin_path, class:"navbar-brand" %>

        <% end %>

      </div>
    </div>
  </nav>


  <%= yield %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>
</html>
